@{
    Layout = null;
}
@model ErrorVM
@{
    ViewData["Title"] = "Oops! An Error Occurred";
    var status = Model.StatusCode;
    var message = Model.Message;
    var errors = Model.Errors;
    string emoji = status switch
    {
        404 => "🔍",
        500 => "💥",
        400 => "⚠️",
        _ => "❗"
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f0f2f5;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        .error-container {
            margin: 5% auto;
            background-color: #fff;
            padding: 40px;
            border-radius: 20px;
            width: 80%;
            max-width: 600px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .emoji {
            font-size: 64px;
            margin-bottom: 10px;
        }

        .code {
            font-size: 48px;
            color: #dc3545;
            font-weight: bold;
        }

        .message {
            font-size: 20px;
            margin: 15px 0;
        }

        .list-errors {
            margin-top: 20px;
            text-align: left;
        }

            .list-errors ul {
                list-style: none;
                padding: 0;
            }

            .list-errors li {
                background-color: #f8d7da;
                color: #721c24;
                padding: 10px;
                margin-bottom: 5px;
                border-radius: 5px;
            }

        .btn-home {
            display: inline-block;
            margin-top: 25px;
            padding: 10px 20px;
            background-color: #0d6efd;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }

            .btn-home:hover {
                background-color: #084298;
            }
    </style>
</head>

<body>
    <div class="error-container">
        <div class="emoji">@emoji</div>
        <div class="code">Error @status</div>
        <div class="message">@message</div>

        @if (errors?.Any() == true)
        {
            <div class="list-errors">
                <h5>Details:</h5>
                <ul>
                    @foreach (var err in errors)
                    {
                        <li>@err</li>
                    }
                </ul>
            </div>
        }

        <a href="/" class="btn-home">Back to Home</a>
    </div>
</body>
</html>
