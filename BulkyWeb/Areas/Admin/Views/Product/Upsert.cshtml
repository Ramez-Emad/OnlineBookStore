@model UpsertProductVM

@{
    ViewData["Title"] = "Create Product";
}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.ProductDTO.Id != 0 ? "Update" : "Create") Product</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label for="fileInput" class="form-label text-muted">
                @(string.IsNullOrEmpty(Model.ProductDTO.ImageUrl) ? "Upload Image:" : "Change Image:")
            </label>

            @if (!string.IsNullOrEmpty(Model.ProductDTO.ImageUrl))
            {
                <div class="mb-2">
                    <img src="@Url.Content("~/Files/Images/Products/" + Model.ProductDTO.ImageUrl)"
                         alt="Current Image"
                         class="img-thumbnail"
                         style="max-width: 200px; max-height: 200px;" />
                </div>
            }

            <input type="file" name="file" id="fileInput" class="form-control shadow-sm" />
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="ProductDTO.Id" type="hidden" />
        <input asp-for="ProductDTO.ImageUrl" type="hidden" />

        <div class="mb-3">
            <label asp-for="ProductDTO.Title" class="form-label"></label>
            <input asp-for="ProductDTO.Title" class="form-control" />
            <span asp-validation-for="ProductDTO.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductDTO.Description" class="form-label"></label>
            <input asp-for="ProductDTO.Description" class="form-control" />
            <span asp-validation-for="ProductDTO.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductDTO.ISBN" class="form-label"></label>
            <input asp-for="ProductDTO.ISBN" class="form-control" />
            <span asp-validation-for="ProductDTO.ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductDTO.Author" class="form-label"></label>
            <input asp-for="ProductDTO.Author" class="form-control" />
            <span asp-validation-for="ProductDTO.Author" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductDTO.ListPrice" class="form-label"></label>
            <input asp-for="ProductDTO.ListPrice" class="form-control" />
            <span asp-validation-for="ProductDTO.ListPrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductDTO.Price" class="form-label"></label>
            <input asp-for="ProductDTO.Price" class="form-control" />
            <span asp-validation-for="ProductDTO.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductDTO.Price50" class="form-label"></label>
            <input asp-for="ProductDTO.Price50" class="form-control" />
            <span asp-validation-for="ProductDTO.Price50" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductDTO.Price100" class="form-label"></label>
            <input asp-for="ProductDTO.Price100" class="form-control" />
            <span asp-validation-for="ProductDTO.Price100" class="text-danger"></span>
        </div>

        <div class="form-floating py-2 col-12">
            <select asp-for="ProductDTO.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                <option disabled selected>--Select Category--</option>
            </select>
            <label asp-for="ProductDTO.CategoryId" class="ms-2"></label>
            <span asp-validation-for="ProductDTO.CategoryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">@(Model.ProductDTO.Id != 0 ? "Update" : "Create")</button>
        <a asp-controller="Product" asp-area="Admin" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
